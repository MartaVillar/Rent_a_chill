<div class="show-wrapper">

  <a href="#"><i class="fa fa-heart"></i></a>


<%= cl_image_tag @chill.photo, class:"show-photo" %>

  <div class="show-content">
    <div class="show-title">
      <h2><%= @chill.title%></h2>
      <%= simple_form_for (@chill) do |f| %>
      <div class="form-inputs">
        <%= f.input :title, placeholder: "Large Garden Pool" %>
        <%= f.input :location, placeholder: "282 Kevin Brook, Imogeneborough, CA 58517" %>
        <%= f.input :capacity, collection: 1..50 %>
        <%= f.input :price_per_hour, placeholder: "10" %>
        <%= f.input :available, collection: [[true, true], [false, false]] %>
        <%= f.input :description, placeholder: "Come chill and barbeque..."%>
        <%= f.input :category, collection: ['pool', 'tub', 'hose', 'sprinkler', 'inflatable pool', 'other'] %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
      </div>

      <%=link_to "Update", new_chill_booking_path(@chill), class: "btn btn-block" %>
    <% end %>
  </div>
</div>
